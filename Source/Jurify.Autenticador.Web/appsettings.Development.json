{
  "ConnectionStrings": {
    "Default": "Server=localhost;Port=25000;Database=jurify_autenticador;Username=postgres;Password=postgres"
  },
  "IdentityResources": [
    {
      "Name": "openid",
      "DisplayName": "Your user identifier",
      "Required": false,
      "UserClaims": [
        "sub"
      ]
    },
    {
      "Name": "profile",
      "DisplayName": "User profile",
      "Description": "Your user profile information (first name, last name, etc.)",
      "Emphasize": true,
      "UserClaims": [
        "name",
        "family_name",
        "given_name",
        "middle_name",
        "preferred_username",
        "profile",
        "picture",
        "website",
        "gender",
        "birthdate",
        "zoneinfo",
        "locale",
        "updated_at"
      ]
    }
  ],
  "ApiResources": [
    {
      "Name": "jurify.api",
      "DisplayName": "API to access Jurify's core functionalities",
      "Scopes": [
        {
          "Name": "jurify.api"
        }
      ]
    },
    {
      "Name": "jurify.chat",
      "DisplayName": "API to access Jurify's chat between clients and lawyers",
      "Scopes": [
        {
          "Name": "jurify.chat"
        }
      ]
    }
  ],
  "Clients": [
    {
      "ClientId": "jurify.web.clients",
      "ClientName": "SPA for clients",

      "AllowedGrantTypes": [ "implicit" ],
      "AllowedScopes": [ "openid", "profile", "api1" ],
      "AllowAccessTokensViaBrowser": true,
      "RequireConsent": false,

      "RedirectUris": [
        "http://localhost:5002/index.html",
        "http://localhost:5002/callback.html",
        "http://localhost:5002/silent.html",
        "http://localhost:5002/popup.html"
      ],
      "FrontChannelLogoutUris": [ "http://localhost:5002/index.html" ],
      "PostLogoutRedirectUris": [ "http://localhost:5002" ],
      "AllowedCorsOrigins": [ "http://localhost:5002" ]
    },
    {
      "ClientId": "jurify.web.lawyers",
      "ClientName": "SPA for lawyers",

      "AllowedGrantTypes": [ "implicit" ],
      "AllowedScopes": [ "openid", "profile", "api1" ],
      "AllowAccessTokensViaBrowser": true,
      "RequireConsent": false,

      "RedirectUris": [
        "http://localhost:5002/index.html",
        "http://localhost:5002/callback.html",
        "http://localhost:5002/silent.html",
        "http://localhost:5002/popup.html"
      ],
      "FrontChannelLogoutUris": [ "http://localhost:5002/index.html" ],
      "PostLogoutRedirectUris": [ "http://localhost:5002" ],
      "AllowedCorsOrigins": [ "http://localhost:5002" ]
    }
  ]
}