@model SignUpViewModel

<div class="login-page">
    <div class="page-header">
        <h1>SignUp</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Sign Up</h3>
                </div>
                <div class="panel-body">

                    <form asp-route="SignUp">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="OfficeName"></label>
                                <input class="form-control" placeholder="Office name" asp-for="OfficeName" autofocus />
                            </div>
                            <div class="form-group">
                                <label asp-for="Latitude"></label>
                                <input class="form-control" placeholder="Office's latitude" asp-for="Latitude"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="Longitude"></label>
                                <input class="form-control" placeholder="Office's longitude" asp-for="Longitude"/>
                            </div>
                        </fieldset>

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input class="form-control" placeholder="Your first name" asp-for="FirstName"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input class="form-control" placeholder="Your last name" asp-for="LastName"/>
                            </div>
                        </fieldset>

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control" placeholder="E-mail for login" asp-for="Email" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="register">Register</button>
                                <button class="btn btn-default" name="button" value="cancel">Cancel</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>